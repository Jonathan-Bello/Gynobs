---
import Layout from "@layouts/Layout.astro";
import AgendaButton from "@components/AgendaButton.astro";
import { Image } from "astro:assets";

import svgTelefono from "@assets/svg/iconoTel.svg";
import svgWhatsapp from "@assets/svg/iconoWhats.svg";
import svgUbicacion from "@assets/svg/iconoMap.svg";
---

<Layout title="Contacto">
  <section class="bg-white py-20 px-4 lg:px-0">
    <div class="container grid md:grid-cols-2 gap-12 items-center">
      <!-- Columna izquierda: texto + datos + botón -->
      <div class="text-blue-900 font-text text-base w-full">
        <div class="max-w-2xl">
          <h1
            class="text-2xl md:text-2xl lg:text-3xl xl:text-4xl 2xl:text-5xl mb-8"
          >
            Agenda una cita para realizarte un estudio o atenderte con alguno de
            nuestros médicos.
          </h1>

          <div class="flex flex-col gap-3 text-lg md:text-xl mb-4">
            <p class="flex items-center gap-4">
              <Image class="size-5" src={svgUbicacion} alt={"pin de mapa"} />
              <span
                ><strong>Hospital Ángeles Lomas</strong> | Torre de Especialidades
                950</span
              >
            </p>

            <a
              href="tel:+5552470685"
              target="_blank"
              class="flex items-center gap-4 hover:underline"
            >
              <Image class="size-5" src={svgTelefono} alt="Teléfono" /> 55-5247-0685
            </a>

            <a
              href="https://wa.me/5578641054"
              target="_blank"
              class="flex gap-4 items-center hover:underline"
            >
              <Image class="size-5" src={svgWhatsapp} alt="WhatsApp" /> 55-7864-1054
            </a>
          </div>
        </div>

        <!-- <AgendaButton href="/contacto" text="AGENDA UNA CITA" /> -->
      </div>

      <!-- Columna derecha: mapa -->
      <div class="w-full rounded-xl overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7526.813892490525!2d-99.281493!3d19.3948154!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d206cc5d563ffd%3A0xf70cdf4e5a254cee!2sHospital%20Angeles%20Lomas!5e0!3m2!1ses!2sus!4v1745932957144!5m2!1ses!2sus"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación del consultorio"></iframe>
      </div>
    </div>
  </section>
</Layout>
