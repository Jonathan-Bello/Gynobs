---
// src/components/AgendaButton.astro
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  class="inline-block border border-[#464966] text-base md:text-lg lg:text-xl 
  text-[#464966] font-montserrat px-6 py-2 rounded-full hover:bg-[#464966] hover:text-white transition-colors duration-200"
>
  {text}
</a>
